import os
import discord
import random 
from dotenv import load_dotenv

load_dotenv()
TOKEN = os.getenv('DISCORD_TOKEN')

client = discord.Client()

greetings = ['hello', 'hi', 'hey']
gReplies = ['hello beautiful', 'whats up', 'hey sir']

@client.event
async def on_ready():
    print(f'{client.user} has connected to Discord!')

@client.event
async def on_message(message):
	if 'dani' in message.content:
		await message.channel.send("Dani is my favorite streamer") 
	if message.content in greetings:
		await message.channel.send(random.choice(gReplies))   


client.run(TOKEN)
